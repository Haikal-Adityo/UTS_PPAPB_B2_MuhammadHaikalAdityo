<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/CustomTextView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's Get Started"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginVertical="16dp"
            android:padding="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama:" />

        <EditText
            android:id="@+id/edit_txt_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_beratBadan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berat Badan:"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_txt_beratBadan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"/>

            <Spinner
                android:id="@+id/spinner_unit_beratBadan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_targetBeratBadan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target Berat Badan:"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_txt_targetBeratBadan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"/>

            <Spinner
                android:id="@+id/spinner_unit_targetBeratBadan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_tujuanDiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tujuan Diet:"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinner_tujuanDiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tujuan Diet"
            android:padding="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Pencapaian Target:"
            android:layout_marginTop="16dp" />

        <DatePicker
            android:id="@+id/date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:calendarViewShown="false" />

        <TextView
            android:id="@+id/txt_targetkalori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Target Maksimum Kalori Harian:"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/edit_txt_targetKalori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginBottom="16dp"/>


        <Button
            android:id="@+id/btn_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Get Started"
            android:backgroundTint="@color/green_primary"
            app:cornerRadius="12dp" />

    </LinearLayout>
</ScrollView>